<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/microforum_schema</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">false</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="com.microforum.gestorencuestas.entities.Usuario"/>
  <mapping class="com.microforum.gestorencuestas.entities.Administrador"/>
  <mapping class="com.microforum.gestorencuestas.entities.UsuarioRegistrado"/>
  <mapping class="com.microforum.gestorencuestas.entities.Pregunta"/>
  <mapping class="com.microforum.gestorencuestas.entities.Encuesta"/>
  <mapping class="com.microforum.gestorencuestas.entities.Trabajo"/>
  <mapping class="com.microforum.gestorencuestas.entities.EventoEncuesta"/>
  <mapping class="com.microforum.gestorencuestas.beans.UsuarioAutenticado"/>
  <mapping class="com.microforum.gestorencuestas.entities.DatosLogin"/>
 </session-factory>
</hibernate-configuration>
